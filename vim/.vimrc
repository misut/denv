"""Index
"""1. File options
"""2. Fold options
"""3. General options
"""4. Highlight options
"""5. Indent options
"""6. Search options
syntax on

""1. File options
set autoread
set noautowrite
set encoding=utf-8

""2. Fold options
set foldclose="all
set foldenable
set foldlevel=0
set foldmethod=manual
set foldopen=all

""3. General options
set emoji
set linebreak
set matchpairs=(:),{:},[:]
set mouse=i
set number
set numberwidth=4
set ruler
set showmatch

""4. Highlight options
set nocursorcolumn
set cursorline
set cursorlineopt=number
set hlsearch

""5. Indent options
set autoindent
set breakindent
set nocindent
set copyindent
set expandtab
set nopreserveindent
set shiftwidth=4
set smartindent
set smarttab
set softtabstop=4
set tabstop=8

""6. Search options
set noignorecase
set incsearch
